@using StokProjesi.Models.Entity
@model List<MUSTERITABLO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="text-center">Müşteriler</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri AD</th>
            <th>Müşteri SOYAD</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.musteriID</th>
                <td>@item.musteriAd</td>
                <td>@item.musteriSoyad</td>
                <td><a href="@Url.Action("Delete", new {id = item.musteriID})" class="btn btn-sm btn-danger">Sil</a> <b>|</b> <a href="@Url.Action("Edit" ,new {id = item.musteriID})" class="btn btn-sm btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Yeni Müşteri Ekle</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>